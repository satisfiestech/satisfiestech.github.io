{
  "version": 2,
  "public": true,
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": "site",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/site/$1"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://your-backend-url.railway.app/api/$1" }
  ]
}
